<UserControl x:Class="KTPM.Views.Home.EditOneLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KTPM.Views.Home"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <StackPanel>
                <Label Content="Ten don vi" />
                <TextBox Text="{Binding Path=ten,Mode=TwoWay}" />
            </StackPanel>
            <StackPanel>
                <Label Content="Cap don vi" />
                <TextBox Text="{Binding Path=cap,Mode=TwoWay}" />
            </StackPanel>

            <Button Content="OK" />
        </StackPanel>    
    </Grid>
</UserControl>
